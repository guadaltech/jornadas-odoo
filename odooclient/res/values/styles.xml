<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowContentOverlay">@color/main_background</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:actionBarStyle">@style/ShapedActionBar</item>
        <item name="android:selectableItemBackground">@drawable/bg_actionbar_item_selector</item>
        <item name="android:actionBarItemBackground">@drawable/bg_actionbar_item_selector</item>
    </style>

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginTop">32dp</item>
    </style>

    <style name="btnStyleFlatBlack" parent="@android:style/Widget.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.6</item>
        <item name="android:background">@drawable/btn_flat_black</item>
        <item name="android:padding">12dip</item>
    </style>
    
    <style name="btnStyleFlatTurquoise" parent="@android:style/Widget.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_flat_turquoise</item>
        <item name="android:padding">12dip</item>
    </style>

    <style name="Theme.VeryFirstActivity" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/FlatActionBar</item>
        <item name="android:windowContentOverlay">@color/main_background</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="FlatActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/odoo_primary</item>
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:displayOptions"/>
        <item name="android:titleTextStyle">@style/ActionBarTitleWhite</item>
    </style>

    <style name="ActionBarTitleWhite" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ShapedActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_background</item>
        <item name="android:icon">@drawable/ic_launcher</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleWhite</item>
    </style>

</resources>